        },
        {
            "type": "vcs",
            "url": "https://github.com/repack4php/illuminate-config.git"
        }
    ],
    "require": {
        "php": "^7.0",
        "repack4php/illuminate-config": "dev-main",
        "repack4php/illuminate-container": "dev-main",
        "repack4php/illuminate-encryption": "dev-main",
        "repack4php/illuminate-events": "dev-main",
        "repack4php/illuminate-hashing": "dev-main",
        "repack4php/illuminate-log": "dev-main",
        "repack4php/illuminate-pagination": "dev-main",
        "repack4php/illuminate-translation": "dev-main",
        "phpunit/php-code-coverage": ">=5.3",
        "phpunit/phpunit": ">=6.5"
    },
    "autoload": {
        "psr-4": {
            "Repack4php\\Testing\\Illuminate\\": "src/"
        }
    },
    "suggest": {
        "phpunit/phpunit": "Documentation: https://phpunit.de/announcements/phpunit-6.html"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "6.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev"
}
